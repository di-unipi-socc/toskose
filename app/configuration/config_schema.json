{
    "definitions": {
        "docker": {
            "type": "object",
            "properties": {
                "base_image": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The base image for the node"
                },
                "base_tag": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The tag of the base image for the node"
                },
                "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The toskosed image name"

                },
                "tag": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The tag of the toskosed image name"
                },
                "registry_password": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The password for the Docker Registry"
                }
            },
            "additionalProperties": false,
            "required": [ "name", "tag" ]
        }
    },
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "The title of the application"
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "description": "The description of the application"
        },
        "nodes": {
            "type": "object",
