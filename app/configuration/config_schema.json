                },
                "port": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 65535,
                    "description": "The HTTP port of the node API"
                },
                "user": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The user of the node API"
                },
                "password": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "description": "The password of the node API"
                },
                "docker": { "$ref": "#/definitions/docker" }
            },
            "additionalProperties": false,
            "required": [ "docker" ]                
        }
